<interface>
	<name>Get Bacula statistics per backup client</name>
	<description>Queries a Bacula backup host for job statistic counters</description>
	<oid_index>%BACULASTATS%.2.1.1</oid_index>
	<oid_num_indexes>%BACULASTATS%.1.0</oid_num_indexes>
	<index_order>baculaCompletionBytes:baculaCompletionFiles:baculaCompletionDuration:baculaCompletionTimeEnd:baculaStartTime:baculaStartDate:baculaJobID:baculaJobName:baculaClientName</index_order>
	<index_order_type>numeric</index_order_type>
	<index_title_format>|chosen_order_field|</index_title_format>

	<fields>
		<baculaIndexClients>
			<name>Index (clients)</name>
			<method>walk</method>
			<source>value</source>
			<direction>input</direction>
			<oid>%BACULASTATS%.2.1.1</oid>
		</baculaIndexClients>

		<baculaClientName>
			<name>Client name</name>
			<method>walk</method>
			<source>value</source>
			<direction>input</direction>
			<oid>%BACULASTATS%.2.1.2</oid>
		</baculaClientName>

		<baculaJobName>
			<name>Job names</name>
			<method>walk</method>
			<source>value</source>
			<direction>output</direction>
			<oid>%BACULASTATS%.2.1.3</oid>
		</baculaJobName>

		<baculaJobID>
			<name>Full job IDs</name>
			<method>walk</method>
			<source>value</source>
			<direction>output</direction>
			<oid>%BACULASTATS%.2.1.4</oid>
		</baculaJobID>

		<baculaStartDate>
			<name>"Date of job start</name>
			<method>walk</method>
			<source>value</source>
			<direction>output</direction>
			<oid>%BACULASTATS%.2.1.5</oid>
		</baculaStartDate>


		<baculaStartTime>
			<name>Time of job start</name>
			<method>walk</method>
			<source>value</source>
			<direction>output</direction>
			<oid>%BACULASTATS%.2.1.6</oid>
		</baculaStartTime>

		<baculaCompletionDateEnd>
			<name>Date of job completion</name>
			<method>walk</method>
			<source>value</source>
			<direction>output</direction>
			<oid>%BACULASTATS%.2.1.7</oid>
		</baculaCompletionDateEnd>

		<baculaCompletionTimeEnd>
			<name>Time of job completion</name>
			<method>walk</method>
			<source>value</source>
			<direction>output</direction>
			<oid>%BACULASTATS%.2.1.8</oid>
		</baculaCompletionTimeEnd>

		<baculaCompletionDuration>
			<name>Duration of job</name>
			<method>walk</method>
			<source>value</source>
			<direction>output</direction>
			<oid>%BACULASTATS%.2.1.9</oid>
		</baculaCompletionDuration>

		<baculaCompletionFiles>
			<name>Files backed up in the job</name>
			<method>walk</method>
			<source>value</source>
			<direction>output</direction>
			<oid>%BACULASTATS%.2.1.10</oid>
		</baculaCompletionFiles>

		<baculaCompletionBytes>
			<name>Bytes backed up in the job</name>
			<method>walk</method>
			<source>value</source>
			<direction>output</direction>
			<oid>%BACULASTATS%.2.1.11</oid>
		</baculaCompletionBytes>
	</fields>
</interface>
